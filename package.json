{
  "name": "my-leaflet-map",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --ssl --ssl-key \"C:\\Users\\user\\key.pem\" --ssl-cert \"C:\\Users\\user\\cert.pem\" --host localhost --port 4200",
     "pm2:start": "pm2 start ecosystem.config.js",
    "build": "ng build",
    "build:prod": "ng build --output-path=../ais-maritime-backend/my-leaflet-map --configuration production",
    "build:watch": "ng build --watch --configuration development",
    "build:ssr": "ng build --configuration=production && npm run build:server",
    "build:server": "ng build --configuration=production --output-hashing=none",
    "serve:ssr": "node dist/my-leaflet-map/server/server.mjs",
    "serve:static": "npx serve dist/my-leaflet-map/browser -s -p 4200",
    "preview": "npm run build:prod && npm run serve:static",
    "preview:ssr": "npm run build:ssr && npm run serve:ssr",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "npm run build:prod && echo 'âœ… Angular built successfully!' && cd ../ais-maritime-backend && npm start"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/cdk": "^20.2.0",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/material": "^20.2.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.6",
    "@bluehalo/ngx-leaflet": "^20.0.0",
    "@bluehalo/ngx-leaflet-markercluster": "^20.0.3",
    "@types/leaflet": "^1.9.20",
    "@types/leaflet.markercluster": "^1.5.6",
    "@types/supercluster": "^7.1.3",
    "express": "^5.1.0",
    "jspdf": "^3.0.3",
    "leaflet": "^1.9.4",
    "leaflet-rotatedmarker": "^0.2.0",
    "leaflet.markercluster": "^1.5.3",
    "rxjs": "~7.8.0",
    "server.js": "^1.0.0",
    "socket.io-client": "^4.8.1",
    "supercluster": "^8.0.1",
